REPORT Z_UPDATETIMP.

DATA: LS_MODIF         TYPE /STDF/LAST_MODIF,
      LV_TIMESTAMP     TYPE TIMESTAMPL,
      LV_RES           TYPE I,
      RV_LAST_MODIFIED TYPE TIMESTAMPL,
      LV_LAST          TYPE TIMESTAMPL.


SELECT TIMSTAMPLL INTO LV_LAST FROM ZCONFF WHERE IDCONF = 13.
ENDSELECT.
SELECT TIMSTAMPLL INTO LV_TIMESTAMP FROM ZCONFF WHERE IDCONF = 12.
ENDSELECT.
CALL METHOD CL_ABAP_TSTMP=>COMPARE
  EXPORTING
    TSTMP1 = LV_TIMESTAMP
    TSTMP2 = LV_LAST
  RECEIVING
    COMP   = LV_RES.

IF LV_RES = -1.
  RV_LAST_MODIFIED = LV_LAST.
ELSEIF LV_RES = 1.
  RV_LAST_MODIFIED = LV_TIMESTAMP.
ELSE.
  RV_LAST_MODIFIED = LV_LAST.

ENDIF.

WRITE :/ RV_LAST_MODIFIED.
WRITE :/ LV_RES.
